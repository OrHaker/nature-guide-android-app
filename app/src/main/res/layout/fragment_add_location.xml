<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".AddLocation"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">
        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Title-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Nature Guide\n הוספת מיקום"
                android:textSize="20dp" />

            <!--app image-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tempnatureimage"
                android:background="@android:color/white"
                android:id="@+id/AddLocation" />

            <!--body-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <!--fields container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <EditText
                        android:id="@+id/AddName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/mail_icon"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:hint="הכנס שם..."
                        android:inputType="text"
                        android:textColorHint="#000000"
                        android:textStyle="bold"
                        android:backgroundTint="#000000"/>

                    <EditText
                        android:id="@+id/AddTitle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/user_icon"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:hint="הכנס כותרת..."
                        android:inputType="text"
                        android:textColorHint="#000000"
                        android:textStyle="bold"
                        android:backgroundTint="#000000"/>

                    <EditText
                        android:id="@+id/AddDescription"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/user_icon"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:hint="הכנס תיאור..."
                        android:inputType="text"
                        android:textColorHint="#000000"
                        android:textStyle="bold"
                        android:backgroundTint="#000000"/>

                    <EditText
                        android:id="@+id/AddImage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/pass_icon"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:hint="..הכנס שם לתמונה"
                        android:inputType="text"
                        android:textColorHint="#000000"
                        android:textStyle="bold"
                        android:backgroundTint="#000000"/>

<!--                    <EditText-->
<!--                        android:id="@+id/AddLatLangv"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:drawableEnd="@drawable/pass_icon"-->
<!--                        android:drawablePadding="10dp"-->
<!--                        android:gravity="right"-->
<!--                        android:hint="הכנס LAT "-->
<!--                        android:inputType="text"-->
<!--                        android:textColorHint="#000000"-->
<!--                        android:textStyle="bold"-->
<!--                        android:backgroundTint="#000000"/>-->

<!--                    <EditText-->
<!--                        android:id="@+id/AddLatLangv1"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:drawableEnd="@drawable/pass_icon"-->
<!--                        android:drawablePadding="10dp"-->
<!--                        android:gravity="right"-->
<!--                        android:hint="הכנס LNG "-->
<!--                        android:inputType="text"-->
<!--                        android:textColorHint="#000000"-->
<!--                        android:textStyle="bold"-->
<!--                        android:backgroundTint="#000000"/>-->

                    <Button
                        android:id="@+id/AddBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="הוספה" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

