<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="#6a737b"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="10">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!--container-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                     />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="כותרת"
                    android:textFontWeight="@android:integer/config_shortAnimTime"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="תיאור המקום" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button

                    android:id="@+id/btnAddToFavorites"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="הוסף למועדפים"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold"/>

                <!--                <Space-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_weight="1" />-->

                <ImageView
                    android:id="@+id/img_whatsapp"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/iconapp" />


                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_like"
                        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        app:srcCompat="@drawable/like" />

                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColorLink="#FFFFFF"
                        />
                </LinearLayout>

                <Button

                    android:id="@+id/btnOpenInMaps"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="פתח במפות"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

</LinearLayout>